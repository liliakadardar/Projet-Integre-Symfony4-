                        <option value="">Boire et manger</option>
                        <option value="">Autres equipements</option>
                    </optgroup>
                </select>
                <div class="nicdark_space20"></div>
                {{ form_errors(form.IdCatM) }}
                {{ form_widget(form.IdCatM, {'attr':{'class':"nicdark_bg_grey nicdark_border_grey   grey medium subtitle"}})}}
                <div class="nicdark_space20"></div> #}


            <div class="form-row">
                <div class="form-group col-md-6">

                    <div class="nicdark_space20"></div>
                    {{ form_errors(form.nom_materiel) }}
                    {{ form_widget(form.nom_materiel, {'attr':{'class':"nicdark_bg_grey nicdark_border_grey   grey medium subtitle",'placeholder':'Matériel'}}) }}
                </div>
                <div class="form-group col-md-6">

                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description, {'attr':{'class':"nicdark_bg_grey nicdark_border_grey   grey medium subtitle",'placeholder':'Description'}}) }}
                </div>
            </div>




            <div class="form-row">
                <div class="form-group col-md-6">

                    <div class="nicdark_space20"></div>
                    {{ form_errors(form.prix_m) }}
                    {{ form_widget(form.prix_m, {'attr':{'class':"nicdark_bg_grey nicdark_border_grey   grey medium subtitle",'placeholder':'Prix'}})}}
                </div>
                <div class="form-group col-md-6">
                    <label>Catégorie du matériel</label>
                    {{ form_errors(form.categorie) }}
                    {{ form_widget(form.categorie, {'attr':{'class':"nicdark_bg_grey nicdark_border_grey   grey small subtitle"}}) }}
                </div>
            </div>


            <div class="nicdark_space5"></div>
            <div class="nicdark_space5"></div>



            {{ form_end(form) }}

        </div>
    </div>


    </div>

    </div>
{% endblock %}