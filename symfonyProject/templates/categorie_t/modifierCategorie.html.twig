{% extends 'base-back.html.twig' %}


{% block title %}Ajouter une nouvelle categorie {% endblock %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">
            <div class="page-titles">
                <h4>Categorie</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Ajouter  une categorie</a></li>
                </ol>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                            <div id="wizard_Service" class="tab-pane" role="tabpanel">
                                <div class="row">
                                    <div class="col-lg-6 mb-2">
                                        <div class="form-group">
                                            <label class="text-label">Type de categorie</label>
                                            {{ form_widget(form.type_transport,{'attr':{'class': 'form-control','placeholder':'type de transport' }}) }}
                                            {{ form_errors(form.type_transport) }}
                                        </div>
                                    </div>






                                </div>




                            </div>
                        </div>
                        <img style="width:100px;height:100px;" src="{{ asset('uploads/region/' ~ image) }}" class="img-fluid rounded-circle" alt="">
                        {{ form_widget(form.image_transport,{'attr':{'class': 'btn mr-2 btn-success' }}) }}

                        <button type="submit" class="btn mr-2 btn-primary">Ajouter</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
