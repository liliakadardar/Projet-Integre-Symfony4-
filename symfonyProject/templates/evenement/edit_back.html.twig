{% extends 'base-back.html.twig' %}


{% block title %}Modifer cet événement {% endblock %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">
            <div class="page-titles">
                <h4>Evenement</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Modifier cet événement</a></li>
                </ol>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                            <div id="wizard_Service" class="tab-pane" role="tabpanel">
                                <div class="row">
                                    <div class="col-lg-6 mb-2">
                                        <div class="form-group">
                                            {#<label class="text-label">Catégorie</label>
                                            {{ form_widget(form.categorie,{'attr':{'class': 'form-control','placeholder':'catégorie' }}) }}
                                            {{ form_errors(form.categorie) }}#}
                                            <centre>
                                                <div class="form-group">
                                                    <label class="text-label">Nom</label>
                                                    {{ form_widget(form.nom_e,{'attr':{ 'class':'form-control input-default' ,'placeholder':'Nom'}}) }}
                                                    {{ form_errors(form.nom_e) }}
                                                </div>
                                                <br>

                                                <div class="form-group">
                                                    <label class="text-label">Debut</label>
                                                    <br>
                                                    {{ form_widget(form.date_deb)}}
                                                    {{ form_errors(form.date_deb) }}
                                                </div>

                                                <div class="form-group">
                                                    <label class="text-label">Fin</label>
                                                    <br>
                                                    {{ form_widget(form.date_fin)}}
                                                    {{ form_errors(form.date_fin) }}
                                                </div>
                                                <br>

                                                <div class="form-group">
                                                    <label class="text-label">Prix</label>
                                                    {{ form_widget(form.prix_e,{'attr':{'class':'form-control input-default', 'placeholder':'Prix', 'size':'200'}}) }}
                                                    {{ form_errors(form.prix_e) }}
                                                </div>
                                                <br>

                                                <div class="form-group">
                                                    <label class="text-label">Description</label>
                                                    {{ form_widget(form.description,{'attr':{'class':'form-control input-default', 'placeholder':'Description'}}) }}
                                                    {{ form_errors(form.description) }}
                                                </div>
                                                <br>


                                                {{ form_widget(form.image_e,{'attr':{'class': 'btn mr-2 btn-success' }}) }}
                                                {{ form_errors(form.image_e) }}
                                            </centre>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <input type="submit" class="btn mr-2 btn-primary" value="Modifier">
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}