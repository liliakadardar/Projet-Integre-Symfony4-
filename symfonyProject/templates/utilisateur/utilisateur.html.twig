{% extends 'base.html.twig' %}

{% block css %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8
        }

        a {
            text-decoration: none !important;
        }

        .add-experience{
            background: #bd7880;
            color: #fff;
            cursor: pointer;
            border: solid 1px #BA68C8
        }
    </style>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block body %}
    <div class="nicdark_space50"></div>
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <div class="col-xs4 nicdark_textevidence nicdark_bg_blue">
                        <h2 class="white nicdark_margin20">Profil </h2>
                    </div>
                    <img class="rounded-circle mt-5" width="150px" alt="image de profil" src="{{ asset('uploads/image/' ~ app.user.image) }}">
                </div>
            </div>
            <div class="col-md-5 border-right">
                <div class="grix xs4 container">
                    {% for message in app.flashes('message') %}
                        <div class="col-xs4">
                            <div class="p-3 my-2 rounded-2 success">{{ message }}</div>
                        </div>
                    {% endfor %}
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">

                            <h2 class="text-right">{{ app.user.nom }} {{ app.user.prenom }}</h2>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="nom" class="form-label">Nom</label>
                        <input type="textType" class="nicdark_focus nicdark_relative" id="nom" value="{{ app.user.nom }}" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="prenom" class="form-label">Prénom</label>
                        <input type="textType" class="nicdark_focus nicdark_relative " id="prenom" value="{{ app.user.prenom }}" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="nicdark_focus nicdark_relative " id="email" value="{{ app.user.email }}" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="tel" class="form-label">Téléphone</label>
                        <input type="numberType" class="nicdark_focus nicdark_relative" id="tel" value="{{ app.user.numTel }}" disabled>
                    </div>
                </div>
            </div>




            <div class="col-md-4">
                <div class="p-3 py-5">
                    <div class="nicdark_archive1  ">
                        <div class="d-flex justify-content-between align-items-center experience">
                            <span class="border px-3 p-1 add-experience white nicdark_margin20"><i class="fa fa-plus icon-cog-2"></i>&nbsp;PARAMÉTRES</span>
                        </div>

                        <ul class="nicdark_list ">

                            <li >
                                <div class="nicdark_margin20">
                                    <div class="nicdark_activity">
                                        <p><i class="icon-angle-right"></i><a class="grey nicdark" href="{{ path('utilisateur_show' ,{'id':app.user.id}) }}">Profil</a></p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="nicdark_margin20">
                                    <div class="nicdark_activity">
                                        <p><i class="icon-angle-right"></i><a class="grey nicdark" href="{{ path('utilisateur_edit',{'id':app.user.id}) }}">Modifier compte</a></p>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="nicdark_margin20">
                                    <div class="nicdark_activity">
                                        <p><i class="icon-angle-right"></i><a class="grey nicdark" href="{{ path('users_pass_modifier',{'id':app.user.id}) }}">Réinitialisation mot de passe</a></p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="nicdark_margin20">
                                    <div class="nicdark_activity">

                                        <form method="post" action="{{ path('utilisateur_delete', {'id': app.user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                                            <button  class="btn bouton" >Supprimer votre compte</button>
                                        </form>



                                       <!-- <p><i class="icon-angle-right"></i><a class="grey nicdark" href="{{ path('utilisateur_delete',{'id':app.user.id}) }}">Supprimer Compte</a></p>-->
                                    </div>
                                </div>
                            </li>


                        </ul>
                    </div>














                </div>
            </div>
        </div>
    </div>
{% endblock %}
