
{% extends 'base-back.html.twig' %}
{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ app.user.roles ? app.user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ app.user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ app.user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ app.user.prenom }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ app.user.dateNaissance ? app.user.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ app.user.numTel }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ app.user.image }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ app.user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>{{ path('utilisateur_edit', {'id': app.user.id}) }}
    </table>

    <a href="{{ path('utilisateur_index') }}">back to list</a>

    <a href="">edit</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
{% endblock %}
