{% extends 'base-back.html.twig' %}
{% block body %}
    <div class="content-body">
    <div class="container-fluid">
        <div class="page-titles">
            <h4>Modifier</h4>
            <ol class="breadcrumb">

                <li class="breadcrumb-item active"><a href="javascript:void(0)">membre</a></li>
            </ol>
        </div>

    <div class="row">
    <div class="col-xl-12 col-xxl-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">membre</h4>
        </div>
        <div class="card-body">
        {{form_start(form)}}
            <div class="form-row">
            <div class="form-group col-md-6">
                <label>Nom</label>
        {{form_widget(form.nom,{'attr':{'class':'form-control '}})}}
            </div>
            <div class="form-group col-md-6">
                <label>Prénom</label>
                {{form_widget(form.prenom,{'attr':{'class':'form-control'}})}}
            </div>
            </div>
            <div class="form-group ">
                <label>Email</label>
                {{form_widget(form.email,{'attr':{'class':'form-control'}})}}
            </div>

            <div class="form-group">
                <label>Téléphone</label>
                {{form_widget(form.num_tel,{'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group input-group mb-3">
                <label>Image</label>
                <div class="input-group mb-3">

                    <div class="custom-file">
                        {{form_widget(form.image,{'attr':{'class':' custom-file-input'}})}}

                        <label class="custom-file-label">Télécharger une image</label>
                    </div>
                </div>
            </div>


            {{form_end(form)}}

        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}