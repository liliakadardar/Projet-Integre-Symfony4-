
{% extends 'base-back.html.twig' %}

{% block title %}Commande Transport{% endblock %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">
            <div class="page-titles">
                <h4>List Commandes Transport </h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a href="{{ path("commande_t_new_admin") }}">Ajouter une nouvelle Commande Transport</a></li>
                </ol>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th class="text-center">Id</th>
                                    <th class="text-center">Date_creation</th>
                                    <th class="text-center">Address_destination</th>
                                    <th class="text-center">actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for commande_t in commande_ts %}
                                    <tr>
                                    <tr>
                                        <td class="text-center">

                                        <td class="text-center">{{ commande_t.id }}</td>
                                        <td class="text-center">{{ commande_t.dateCreation ? commande_t.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                                        <td class="text-center">{{ commande_t.addressDestination }}</td>
                                        <td class="text-center">
                                            <a type="button" href="{{ path('commande_t_show_admin', {'id': commande_t.id}) }}" class="btn btn-rounded btn-outline-warning">show</a>
                                            <a type="button" href="{{ path('commande_t_edit_admin', {'id': commande_t.id}) }}" class="btn btn-rounded btn-outline-warning">edit</a>
                                            <a type="button" href="{{ path('commande_t_delete_admin', {'id': commande_t.id}) }}" class="btn btn-rounded btn-outline-warning">delete</a>

                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no records found</td>
                                    </tr>
                                {% endfor %}
                                <a type="button"  href="{{ path('commande_t_new_admin') }}" class="btn btn-rounded btn-outline-warning">Create new</a>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>
        </div>
    </div>
{% endblock %}
