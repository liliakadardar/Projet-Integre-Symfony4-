{% extends 'base-back.html.twig' %}


{% block title %}Events{% endblock %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">
            <div class="page-titles">
                <h4>La liste des Evenements</h4>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-responsive-sm">
                                <thead>
                                <tr>
                                    <th class="text-center">Image</th>
                                    <th class="text-center">Nom</th>
                                    <th class="text-center">Date d√©but</th>
                                    <th class="text-center">Date fin</th>
                                    <th class="text-center">Description</th>
                                    <th class="text-center">prix</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                    <tr>
                                        <td class="text-center">
                                            <div class="d-flex align-items-center">
                                                <img src="{{ asset('uploads/event_pictures/' ~ event.image_e) }}" alt="" style="width: 50px; height: 50px;" class="rounded-lg mr-2">
                                            </div>
                                        </td>
                                        <td class="text-center">{{ event.nom_e }}</td>
                                        <td class="text-center">{{ event.date_deb ? event.date_deb|date('Y-m-d') : '' }}</td>
                                        <td class="text-center">{{ event.date_fin ? event.date_fin|date('Y-m-d') : '' }}</td>
                                        <td class="text-center">{{ event.description }}</td>
                                        <td class="text-center">{{ event.prix_e }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>
        </div>
    </div>
{% endblock %}

