<body>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
          Vous Ã©tes connecter en tant que{{ app.user.username }}, <a href="{{ path('app_logout') }}">deconnexion</a>
        </div>
    {% endif %}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" method="post">
					<span class="login100-form-title p-b-34">
						CONNEXION
					</span>

                <div class="mb-3 nicdark_focus nicdark_relative nicdark_icon_text" data-validate="Type user name">
                    <input  type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control nicdark_bg_grey nicdark_border_grey   grey small subtitle" autocomplete="email"  placeholder="Email" required autofocus >
                    <span class="focus-input100"></span>
                </div>

                <div class="mb-3 nicdark_focus nicdark_relative nicdark_icon_text" data-validate="Type password">
                    <input type="password" name="password" id="inputPassword" class="form-control nicdark_bg_grey nicdark_border_grey   grey small subtitle" autocomplete="current-password" placeholder="Mot de passe" required >
                    <span class="focus-input100"></span>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                <div class="container-login100-form-btn">

                    <button class="login100-form-btn" type="submit">
                        Se connecter
                    </button>
                </div>

                <div class="w-full text-center p-t-27 p-b-239">
						<span class="txt1">
							Vous avez oubliez
						</span>

                    <a href="#" class="txt2">
                       votre mot de passe/Email?
                    </a>
                </div>

                <div class="w-full text-center">
                    <a href="{{ path('app_register') }}" class="txt3">
                        S'inscrire
                    </a>
                </div>
            </form>
            <div class="login100-more" style="background-image: url('FRONT/compte/images/bg-01.jpg');"> </div>

        </div>
    </div>
</div>



 <div id="dropDownSelect1"></div>


