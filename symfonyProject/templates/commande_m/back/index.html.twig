{% extends'base-back.html.twig' %}
{% block title %}CommandeM index{% endblock %}

{% block body %}
<div class="content-body">
    <div class="container-fluid">
        <div class="page-titles">
            <h4>List Commandes Evenement </h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="{{ path("commande_e_new_admin") }}">Ajouter une nouvelle Commande Evenement</a></li>
            </ol>
        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th class="text-center">Id</th>
                                <th class="text-center">Date_creation</th>
                                <th class="text-center">Address_destination</th>
                <th class="text-center">Total</th>
                <th class="text-center">Quantite</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande_m in commande_ms %}
            <tr>
            <tr>

                 <td class="text-center">{{ commande_m.id }}</td>
                 <td class="text-center">{{ commande_m.dateCreation ? commande_m.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                 <td class="text-center">{{ commande_m.addressDestination }}</td>
                 <td class="text-center">{{ commande_m.total }}</td>
                 <td class="text-center">{{ commande_m.Quantite }}</td>
                 <td class="text-center">
                   <a type="button" href="{{ path('commande_m_show_admin', {'id': commande_m.id}) }}" class="btn btn-rounded btn-outline-warning">show</a>
                   <a type="button" href="{{ path('commande_m_edit_admin', {'id': commande_m.id}) }}" class="btn btn-rounded btn-outline-warning">edit</a>
                     <a type="button" href="{{ path('commande_m_delete_admin', {'id': commande_m.id}) }}" class="btn btn-rounded btn-outline-warning">delete</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        <a type="button"  href="{{ path('commande_m_new_admin') }}" class="btn btn-rounded btn-outline-warning">Create new</a>

        </tbody>
    </table>
                        <div class="navigation">
                            {{ knp_pagination_render(commande_ms,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig',{'rounded': true,'size': 'small' }) }}

                        </div>
                    </div>
                </div>
            </div>
            <!-- /# card -->
        </div>
    </div>
</div>

{% endblock %}
